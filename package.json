{
  "name": "@cucumber-stories/cucumber-datatable",
  "version": "1.0.0",
  "description": "Cucumber Datatable made easy!",
  "license": "MIT",
  "author": "Delphin Aubin (@delphinaubin) & Baptiste Lecocq (@tiste)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist && tsc",
    "build": "tsc",
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "prepublish": "npm run build",
    "test": "jest",
    "test-types": "tsd --typings src"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.mock.ts",
      "!**/*.module.ts",
      "!**/main.ts",
      "!load-env.ts",
      "!app.config.ts",
      "!tracer.ts",
      "!**/index.ts"
    ],
    "coverageDirectory": "../coverage",
    "coveragePathIgnorePatterns": [
      "/test/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "resetMocks": true,
    "restoreMocks": true,
    "rootDir": "src",
    "setupFiles": [],
    "setupFilesAfterEnv": [],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(uuid)/)"
    ]
  },
  "devDependencies": {
    "@swc/jest": "0.2.22",
    "@types/jest": "29.0.3",
    "jest": "29.0.3",
    "prettier": "2.7.1",
    "rimraf": "3.0.2",
    "tsd": "^0.24.1",
    "typescript": "4.8.3"
  },
  "peerDependencies": {
    "@cucumber/cucumber": "8.x"
  }
}
